{
  "manifest_version": 3,
  "name": "Fire Extension ❤️",
  "description": "Base Level Extension",
  "version": "0.0.1",
  "action": {
    "default_popup": "Popup/popup.html"
  },
  "icons": {
    "16": "images/fire-1.png",
    "32": "images/fire-1.png",
    "48": "images/fire-1.png",
    "128": "images/fire-1.png"
  },
  "background": {
    "service_worker": "Background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "mac": "Command+B",
        "windows": "Ctrl+B"
      }
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}